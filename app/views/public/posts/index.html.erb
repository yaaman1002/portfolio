<div class="container-fluid">
          <div class="row">
            <div class="col-md-3">
              <p>ここに常に表示させたいやつ</p>
              <p>こんなかんじ？</p>
              <div>
                いろいろ
              </div>
              <div>
                さまざま
              </div>
            </div>
          </div>
        </div>
      <div class="aboutback">
        <div class="square col-md-4 text-center ml-4 mt-3" style="background-color: #cee4ae;">
         <h1>My_Page</h1>
           <%= image_tag @user.get_profile_image(100,100) %>
            <div class="container card mt-3 mb-3">
                  <table class="table">
                    <tbody>
                      <tr></tr>
                       <tr><th class="bg-lite">name</th>
                           <td><%= @user.name %></td></tr>
                       <tr><th class="bg-lite">introduction</th>
                           <td><%= @user.introduction %></td></tr>
                    </tbody>
                  </table>
                    <%= link_to edit_user_path(@user), class: 'btn btn-outline-primary' do %>
                      <i class="fa-solid fa-user-gear"></i>
                    <% end %>
                    <%= link_to edit_post_path(@posts), class: 'btn btn-outline-primary' do %>
                      <i class="fa-solid fa-file-pen"></i>
                    <% end %>
               </div>
              </div>
                 <div class="text-center">
                   <table class="table table-striped col-md-7">
                     <thead>
                     <tr>
                      <th></th>
                      <th>タイトル</th>
                      <th>投稿内容</th>
                      <th colspan="3"></th>
                     </tr>
                    <tbody>
                       <% @posts.each do |posts| %>
                          <tr>
                            <td>
                              <%= link_to user_path(@user) do %>
                              <%= image_tag(posts.get_image, size: "150x150") %>
                              <% end %>
                            </td>
                            <td>
                              <%= link_to posts.title, user_path(@user) %>
                            </td>
                            <td>
                              <%= link_to posts.body %>
                            </td>
                          </tr>
                          <% end %>
                        </tbody>
                      </thead>
                    </table>
                  </div>
                </div>
        
      
    