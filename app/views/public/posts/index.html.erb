  <div class="row">
    <div class="col-md-3">
      <h1>My_page</h1>
          <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr></tr>
                 <tr><th>name</th>
                     <td><%= @user.name %></td></tr>
