<div class="col-md-8 mt-4 ml-4">
  <h2>フォロー一覧</h2>
  　<table class="table">
  　  <thead>
  　  <tr>
  　   <th>プロフィール</th>
  　    <th>名前  </th>
  　    <th>タイトル</th>
  　 　<th colspan="3"></th>
  　  </tr>
  　</thead>
  　<tbody>
  　  <% @users.each do |user| %>
  　  <tr>
  　    <td><p><%= image_tag user.get_profile_image(100,100) %></p></td>
  　    <td><p><%= user.name %></p></td>
        <td><p><%= user.title %></p></td>
        <td><p><%= link_to "ユーザー詳細", user_path(user.id) %></p></td>
        <% end %>
  　  </tr>
  　</tbody>
</div>
         

