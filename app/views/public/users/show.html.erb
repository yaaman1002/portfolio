<div class="col-md-8 offset-md-1">
  <h1>ユーザー詳細</h1>
  　 <table class="table table-striped">
         <thead>
         <tr>
          <th></th>
          <th>タイトル</th>
          <th>投稿内容</th>
          <th colspan="3"></th>
         </tr>
        <tbody>
          <% @posts.each do |posts| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
              <%= image_tag posts.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <%= link_to posts.title, user_path(@user) %>
            </td>
            <td>
              <%= link_to posts.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
</div>