<div class="container" style="background-color: #FFE8AF;">
  <div class="row">
    <div class="text-center col-md-7">
      <h2 class="mt-3">投稿の編集</h2>
        <%= form_with model: @post, url: admin_post_path(@post), method: :patch do |f| %>

            <h4>タイトル</h4>
              <%= f.text_field :title %>

            <h4>本文</h4>
              <%= f.text_area :body %>

            <p><%= f.submit '投稿を編集する' %></p>

        <% end %>
    </div>
  </div>
</div>