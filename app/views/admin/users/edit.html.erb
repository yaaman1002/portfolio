<div class="container text-center" style="background-color: #FFFEF6;">
  <div class="row">
    <div class="col-md-7">
      <h3>ユーザー編集</h3>
         <%= form_with model: @user do |f| %>
           <div class="form-group">
              <label for="inputName">名前</label>
              <%= f.text_field :name, autofocus:true %>
            </div>
            
            <div class="form-group">
              <label for="inputImage">プロフィール画像</label>
              <%= f.file_field :profile_image, accept: "image/*" %>
            </div>
            
            <div class="form-group">
              <label for="introduction">自己紹介</label>
              <%= f.text_area :introduction %>
            </div>
            
            <div class="form-group">
              <%= f.submit "ユーザー情報を編集する", class: 'btn btn-outline-primary' %>
            </div>
            <% end %>
    </div>
  </div>
</div>